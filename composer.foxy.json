{
    "minimum-stability": "stable",
    "config": {
        "foxy": {
            "enabled": false,
            "manager": "yarn",
            "enable-packages": {
                "*": true
            }
        },
        "preferred-install": {
            "dmstr/*": "source",
            "hrzg/*": "source",
            "schmunk42/*": "source",
            "dektrium/yii2-rbac": "source",
            "*": "auto"
        }
    },
    "autoload": {
        "psr-4": {
            "app\\": "../src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "../tests"
        }
    },
    "require": {
        "foxy/foxy": "@dev",
        "yiisoft/yii2-dev": "2.1.x-dev",
        "codemix/yii2-streamlog": "^1.2"
    }
}
